<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="searchViewStyle">@style/SearchViewTheme</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="LargeText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <style name="MediumText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="SmallText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

</resources>
